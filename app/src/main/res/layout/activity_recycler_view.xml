<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/recyclerViewItemsParent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/recyclerViewImage"
            android:layout_width="29dp"
            android:layout_height="34dp"
            android:scaleType="fitCenter"
            android:src="@drawable/file"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:contentDescription="@string/fileIcon" />

        <TextView
            android:id="@+id/recyclerViewFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:textSize="18sp"
            android:fontFamily="@font/el_messiri"
            android:textColor="@color/black"
            android:text="@string/fileExample"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>